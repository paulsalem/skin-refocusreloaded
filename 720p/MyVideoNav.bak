					<control type="textbox">
						<width>525</width>
						<height>244</height>
						<label>$INFO[Container.ShowPlot]</label>
						<include>description_Small</include>
						<visible>Container.Content(episodes) + IsEmpty(ListItem.Title)</visible>
					</control>
				</control>
			</control>
			<!---portrait--->
			<control type="group">
				<posx>750</posx>
				<posy>65</posy>
				<visible>!SubString(Container.FolderPath,plugin://)</visible>
				<control type="group">
					<visible>[Container.Content(movies) | Container.Content(tvshows)] + [!Skin.HasSetting(view.list.fanart) | SubString(Container.FolderPath,plugin://)] | Container.Content(actors) | Container.Content(seasons)</visible>
