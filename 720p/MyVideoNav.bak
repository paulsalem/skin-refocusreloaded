					<include>info_Sub</include>
					<visible>Container.Content(tvshows) + !IsEmpty(ListItem.TVShowTitle)</visible>
				</control>
				<control type="image">
					<width>128</width>
					<height>48</height>
					<info>ListItem.StarRating</info>
					<aspectratio align="center">keep</aspectratio>
