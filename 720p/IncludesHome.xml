<includes>
	<include name="homeMenusLayout">
		<itemlayout width="180" height="52">
			<control type="label">
				<posx>20</posx>
				<posy>70</posy>
				<posy>100</posy>
				<width>180</width>
				<height>50</height>
				<font>homeMenu</font>
				<align>center</align>
				<label>$INFO[ListItem.Label]</label>
				<textcolor>Color0</textcolor>
			</control>
		</itemlayout>			
		<focusedlayout width="180" height="52">
			<control type="image">
				<posy>0</posy>
				<width>180</width>
				<height>200</height>
				<aspectratio align="left">stretch</aspectratio>
				<!--<texture border="1">home/menuSelect.png</texture>-->
				<include>home_ListScroll</include>
				<animation effect="fade" start="100" end="50" time="350" condition="System.IdleTime(5)">Conditional</animation>
				<visible>!Control.HasFocus(888)</visible>
			</control>
			<!--
			<control type="image">
				<posy>0</posy>
				<width>950</width>
				<height>200</height>
				<aspectratio align="left">stretch</aspectratio>
				<texture border="80,0,0,0">home/menuSelect.png</texture>
				<include>home_ListScroll</include>
				<visible allowhiddenfocus="true">[Container(9000).HasFocus(21) | Container(9000).HasFocus(22)]</visible>	
			</control>
			-->
			<control type="label">
				<posy>70</posy>
				<posx>20</posx>
				<width>180</width>
				<height>50</height>
				<font>homeMenu</font>
				<align>center</align>
				<textcolor>Color2</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<!--<visible>![Container(9000).HasFocus(21) | Container(9000).HasFocus(22)]</visible>-->
			</control>
			<control type="label">
				<posy>70</posy>
				<posx>20</posx>
				<width>180</width>
				<height>50</height>
				<font>homeMenu</font>
				<align>left</align>
				<textcolor>Color1</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<visible>Control.HasFocus(888)</visible>
			</control>
			<control type="label">
				<posy>72</posy>
				<posx>20</posx>
				<width>180</width>
				<height>50</height>
				<font>homeMenuInfo</font>
				<align>left</align>
				<textcolor>Color5</textcolor>
				<label>[LOWERCASE]$INFO[ListItem.Label2][/LOWERCASE]</label>
				<!--<visible>Container(9000).HasFocus(21) | Container(9000).HasFocus(22)</visible>-->
			</control>
		</focusedlayout>
	</include>
	<include name="home_statuslabel">
		<posy>7</posy>
		<width>screen_Width</width>
		<font>rss</font>
		<align>center</align>
		<pauseatend>6000</pauseatend>
		<scroll>false</scroll>
		<scrollout>false</scrollout>
		<aligny>center</aligny>
		<textcolor>Color2</textcolor>
		<include>fadeinout</include>
	</include>
	<include name="home_Slideshow">
		<include>screen_Dimensions</include>
		<aspectratio>scale</aspectratio>
		<randomize>true</randomize>
		<loop>yes</loop>
		<timeperimage>slideshow_Timer</timeperimage>
		<fadetime>fadetime_Slideshow</fadetime>
		<animation type="WindowOpen" condition="Window.Previous(startup)">
			<effect type="fade" start="0" end="100" time="600" delay="0" />
		</animation>
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" time="200" delay="0" />
		</animation>
		<animation type="WindowOpen" condition="!Window.Previous(startup)">
			<effect type="fade" start="0" end="100" time="200" delay="0" />
		</animation>
	</include>
</includes>